<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/holo_blue_light"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="55dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainMenu"
    android:weightSum="1">

    <Button
        android:id="@+id/TalksAndClassesButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:text="Talks and Classes"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"
        android:textSize="40dp"
        android:layout_above="@+id/ArtsAndCraftsButton"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/ArtsAndCraftsButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:text="Arts and crafts"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_light"
        android:textSize="33dp"
        android:layout_above="@+id/CompetitionsButton"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/CompetitionsButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:text="Competitions"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_orange_light"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Admin Main Menu"
        android:id="@+id/AdminMainMenuTextView"
        android:layout_above="@+id/TalksAndClassesButton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="35dp" />
</RelativeLayout>
